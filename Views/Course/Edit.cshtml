@model CourseFormViewModel

<h2>Edit Course</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="ProfileImageFile" class="form-label">Change Profile Image</label>
        <input type="file" asp-for="ProfileImageFile" class="form-control" />
        @if (Model.ExistingImage != null)
        {
            <div class="mt-2">
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.ExistingImage)" width="100" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
