@model List<LessonListItemViewModel>

<h2>Lessons</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Create New Lesson</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            <tr>
                <td>@lesson.Name</td>
                <td>@lesson.Description</td>
                <td>@lesson.CourseName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@lesson.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@lesson.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@lesson.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
