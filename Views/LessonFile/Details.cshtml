@model LessonFileDetailsViewModel

<h2>File Details</h2>

<dl class="row">
    <dt class="col-sm-3">File Name</dt>
    <dd class="col-sm-9">@Model.FileName</dd>

    <dt class="col-sm-3">File Type</dt>
    <dd class="col-sm-9">@Model.FileType</dd>

    <dt class="col-sm-3">Lesson</dt>
    <dd class="col-sm-9">@Model.LessonName</dd>

    <dt class="col-sm-3">Uploaded By</dt>
    <dd class="col-sm-9">@Model.UploadedByName</dd>

    <dt class="col-sm-3">Uploaded At</dt>
    <dd class="col-sm-9">@Model.UploadedAt.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-3">Download</dt>
    <dd class="col-sm-9">
        <a href="@Model.FilePath" target="_blank" class="btn btn-outline-info">Open File</a>
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
