@model LessonFileDetailsViewModel

<h2>Delete File</h2>

<p>Are you sure you want to delete this file?</p>

<dl class="row">
    <dt class="col-sm-3">File Name</dt>
    <dd class="col-sm-9">@Model.FileName</dd>

    <dt class="col-sm-3">Lesson</dt>
    <dd class="col-sm-9">@Model.LessonName</dd>

    <dt class="col-sm-3">Uploaded By</dt>
    <dd class="col-sm-9">@Model.UploadedByName</dd>

    <dt class="col-sm-3">Uploaded At</dt>
    <dd class="col-sm-9">@Model.UploadedAt.ToString("yyyy-MM-dd HH:mm")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
