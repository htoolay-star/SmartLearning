@model LessonFileFormViewModel

<h2>Edit File Metadata</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="FileName" class="form-label"></label>
        <input asp-for="FileName" class="form-control" />
        <span asp-validation-for="FileName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FileType" class="form-label"></label>
        <input asp-for="FileType" class="form-control" />
        <span asp-validation-for="FileType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LessonId" class="form-label">Lesson</label>
        <select asp-for="LessonId" asp-items="Model.LessonList" class="form-select"></select>
        <span asp-validation-for="LessonId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
